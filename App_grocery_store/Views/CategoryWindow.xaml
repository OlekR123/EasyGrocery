<Window x:Class="App_grocery_store.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_grocery_store"
        mc:Ignorable="d"
        Title="Категория" Height="200" Width="300"
        Icon="/Pictures/app.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="0,5" Width="200" Tag="Название..." GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Foreground="Gray"/>
        <Button Content="Сохранить" Grid.Row="1" Width="100" Margin="0,10" Click="SaveButton_Click"/>
    </Grid>
</Window>